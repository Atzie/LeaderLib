INIT
	CHARACTER:__Me
	INT:%Invulnerable = 0
EVENTS

EVENT Set_Invulnerability
ON
	OnInit()
ACTIONS
	CharacterSetImmortal(__Me,1)
	SetInvulnerable(__Me,%Invulnerable)
	SetCanFight(__Me, 0)
	SetCanJoinCombat(__Me, 0)
IF "!c1"
	CharacterHasStatus(__Me, LLLIB_DUMMY_INVULNERABLE)
THEN
	CharacterApplyStatus(__Me, LLLIB_DUMMY_INVULNERABLE, -1.0, 1)
ENDIF